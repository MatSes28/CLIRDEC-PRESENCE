# Database Configuration
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/clirdec_presence

# Individual PostgreSQL connection parameters (auto-set by Railway)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=yourpassword
PGDATABASE=clirdec_presence

# Email Configuration (Brevo/SendGrid)
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=matt.feria@clsu2.edu.ph

# Optional: SendGrid (if using SendGrid instead of Brevo)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Application Configuration
NODE_ENV=production
PORT=5023

# Session Secret (generate a random string for production)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_session_secret_here

# Replit Authentication (Optional - only needed if using Replit Auth)
REPLIT_CLIENT_ID=your_replit_client_id
REPLIT_CLIENT_SECRET=your_replit_client_secret

# Frontend Configuration (for Vite)
VITE_API_URL=http://localhost:5023
